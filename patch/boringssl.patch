     return -1;
   }
 
+#if defined(GOSTSSL)
+  if( gostssl() )
+  {
+      int is_gost;
+      int ret_gost;
+
+      ret_gost = gostssl()->connect( ssl, &is_gost );
+
+      if( is_gost )
+          return ret_gost;
+  }
+#endif
+
   /* Run the handshake. */
   assert(ssl->s3->hs != NULL);
   int ret = ssl->handshake_func(ssl->s3->hs);
@@ -715,6 +814,19 @@ static int ssl_read_impl(SSL *ssl, void *buf, int num, int peek) {
       }
     }
 
+#if defined(GOSTSSL)
+  if( gostssl() )
+  {
+      int is_gost;
+      int ret_gost;
+
+      ret_gost = gostssl()->read( ssl, buf, num, &is_gost );
+
+      if( is_gost )
+          return ret_gost;
+  }
+#endif
+
     int got_handshake;
     int ret = ssl->method->read_app_data(ssl, &got_handshake, buf, num, peek);
     if (ret > 0 || !got_handshake) {
@@ -769,6 +881,19 @@ int SSL_write(SSL *ssl, const void *buf, int num) {
     }
   }
 
+#if defined(GOSTSSL)
+  if( gostssl() )
+  {
+      int is_gost;
+      int ret_gost;
+
+      ret_gost = gostssl()->write( ssl, buf, num, &is_gost );
+
+      if( is_gost )
+          return ret_gost;
+  }
+#endif
+
   return ssl->method->write_app_data(ssl, buf, num);
 }
 
